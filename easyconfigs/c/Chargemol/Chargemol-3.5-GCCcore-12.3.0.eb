easyblock = 'PackedBinary'

name = 'Chargemol'
version = '3.5'

homepage = 'https://sourceforge.net/projects/ddec/'
description = """
This program computes Density Derived Electrostatic and Chemical (DDEC) net atomic charges and
atomic multipoles for periodic and nonperiodic systems. These chemically meaningful net
atomic charges approximately reproduce the electrostatic potential.
"""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

source_urls = ['https://sourceforge.net/projects/ddec/files']
sources = ['%(namelower)s_09_26_2017.zip']
checksums = ['3aec3805536d8b1f4b5b2bbbab3a20a1eff3cfa830aca24ad3d39d03eae0a95b']

builddependencies = [('binutils', '2.40')]

postinstallcmds = [
    'mkdir %(installdir)s/bin',
    'mv %(installdir)s/chargemol_FORTRAN_09_26_2017/compiled_binaries/linux/*  %(installdir)s/bin/',
    'chmod +x %(installdir)s/bin/*',
]

sanity_check_paths = {
    'files': ['bin/Chargemol_09_26_2017_linux_serial', 'bin/Chargemol_09_26_2017_linux_parallel'],
    'dirs': ['bin'],
}

moduleclass = 'chem'
